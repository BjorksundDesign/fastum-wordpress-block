{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "custom-text-block/text-modal",
	"version": "0.1.0",
	"title": "Text Modal",
	"category": "design",
	"attributes": {
		"items": {
			"type": "array",
			"default": []
		},
		"modalBackground":{"type": "integer"},
		 "style": {
			"type": "object"
		},
		"backgroundColor": {
            "type": "string",
            "default": "#ffffff" 
        },
		"image":{"type": "integer"},
		"id":{"type": "integer"},
		"columnOrder":{"type": "boolean", "default":"false"},
		"faIconStyle":{
			"type": "array",
			"default": []
		},
		"faIconColor":{
			"type": "string",
            "default": "#6f2t54" 
		},
		"faIconRaw":{
			"type": "string",
			"default": "f00e"
		},
		"faIcon": {
			"type": "string",
			"default": "\\f00e"
			},
		"textAlign": {
            "type": "string",
            "default": "none"
        },
		"cardBorder": {
            "type": "string",
            "default": "Show"
        },
        "imageWidth": {
            "type": "string",
            "default": "100%"
        },
        "imageSize": {
            "type": "string",
            "default": "cover"
        },
        "imageAspect": {
            "type": "string",
            "default": "3/2"
        }
	},
	"description": "Text modal for all text needs",
	"example": {},
	"supports": {
		"html": true,
		"color": {
			"background": true,
			"gradients": true
		},
		"typography": {
            "textAlign": true
        },
		"spacing": {
			"padding": true,
			"margin": true
		},
		"border": true,
		"style": true		
	},
	"textdomain": "custom-text-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}
