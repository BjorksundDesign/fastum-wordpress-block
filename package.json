{
	"name": "custom-text-block",
	"version": "0.1.0",
	"description": "Example block scaffolded with Create Block tool.",
	"author": "The WordPress Contributors",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build --webpack-copy-php --blocks-manifest",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start --webpack-copy-php --blocks-manifest",
		"build-css": "sass src/styles/scss/global.scss src/styles/css/global.css --style compressed",
    	"watch-css": "sass --watch src/styles/scss/global.scss:src/styles/css/global.css --style compressed"
	},
	"devDependencies": {
		"@wordpress/scripts": "^30.18.0",
		"nodemon": "^3.1.10",
		"sass": "^1.93.2"
	},
	"dependencies": {
		"@10up/block-components": "^1.21.0",
		"@fortawesome/fontawesome-svg-core": "^7.0.1",
		"@fortawesome/free-brands-svg-icons": "^7.0.1",
		"@fortawesome/free-regular-svg-icons": "^7.0.1",
		"@fortawesome/free-solid-svg-icons": "^7.0.1",
		"@fortawesome/react-fontawesome": "^3.0.2",
		"@limetech/lime-elements": "^38.28.0"
	}
}
